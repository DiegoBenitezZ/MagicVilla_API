@model VillaNumberUpdateVM

<form method="POST" asp-controller="VillaNumber" asp-action="Update">
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Update Villa</h1>
		<hr />
		<div class="row">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			
			<div class="col-2">
				<label asp-for="VillaNumberUpdateDTO.VillaNo" class="control-label pt-2" style="font-size: 20px"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="VillaNumberUpdateDTO.VillaNo" class="form-control" readonly />
				<span asp-validation-for="VillaNumberUpdateDTO.VillaNo" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="VillaNumberUpdateDTO.VillaId" class="control-label pt-2" style="font-size: 20px"></label>
			</div>
			<div class="col-10 pb-3">
				<select asp-for="VillaNumberUpdateDTO.VillaId" asp-items="Model.VillaList" class="form-select"></select>
				<span asp-validation-for="VillaNumberUpdateDTO.VillaId" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="VillaNumberUpdateDTO.SpecialDetails" class="control-label pt-2" style="font-size: 20px"></label>
			</div>
			<div class="col-10 pb-3">
				<textarea asp-for="VillaNumberUpdateDTO.SpecialDetails" class="form-control" rows="5"></textarea>
				<span asp-validation-for="VillaNumberUpdateDTO.SpecialDetails" class="text-danger"></span>
			</div>

			<div class="col-5 offset-2">
				<a asp-action="Index" asp-controller="VillaNumber" class="btn btn-primary form-control">Back to List</a>
			</div>

			<div class="col-5">
				<input type="submit" value="Update" class="btn btn-success form-control" />
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}