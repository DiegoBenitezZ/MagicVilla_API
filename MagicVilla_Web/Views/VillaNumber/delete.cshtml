@model VillaNumberDeleteVM


<form method="POST" asp-controller="VillaNumber" asp-action="Delete">
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Delete Villa</h1>
		<hr />
		<div class="row">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input asp-for="VillaList" hidden />
			<div class="col-2">
				<label asp-for="VillaNumberDTO.VillaNo" class="control-label pt-2" style="font-size: 20px"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="VillaNumberDTO.VillaNo" class="form-control" readonly/>
				<span asp-validation-for="VillaNumberDTO.VillaNo" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="VillaNumberDTO.VillaId" class="control-label pt-2" style="font-size: 20px"></label>
			</div>
			<div class="col-10 pb-3">
				<select asp-for="VillaNumberDTO.VillaId" asp-items="Model.VillaList" class="form-select" readonly></select>
				<span asp-validation-for="VillaNumberDTO.VillaId" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label asp-for="VillaNumberDTO.SpecialDetails" class="control-label pt-2" style="font-size: 20px"></label>
			</div>
			<div class="col-10 pb-3">
				<textarea asp-for="VillaNumberDTO.SpecialDetails" class="form-control" rows="5" readonly></textarea>
				<span asp-validation-for="VillaNumberDTO.SpecialDetails" class="text-danger"></span>
			</div>

			<div class="col-5 offset-2">
				<a asp-action="Index" asp-controller="VillaNumber" class="btn btn-primary form-control">Back to List</a>
			</div>

			<div class="col-5">
				<input type="submit" value="Delete" class="btn btn-danger form-control" />
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}