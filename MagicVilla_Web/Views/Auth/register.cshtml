@model RegistrationRequestDTO


<form method="POST">
	<div class="container border p-4">
		<div class="row text-center">
			<h1>Register</h1>
		</div>
		<div class="row text-center">
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
		<div class="row d-grid gap-2 px-5">
			<div class="col-12 pb-2">
				<input asp-for="UserName" class="form-control" type="text" placeholder="Username..." />
			</div>
			<div class="col-12 pb-2">
				<input asp-for="Name" class="form-control" type="text" placeholder="Name..." />
			</div>
			<div class="col-12 pb-2">
				<input asp-for="Password" class="form-control" type="text" placeholder="Password..." />
			</div>
			<div class="col-12 pb-2">
				<select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
					<option disabled selected>--Select Role--</option>
				</select>
			</div>
			<div class="col-12 d-grid pb-2">
				<button type="submit" class="btn btn-primary" value="Submit">Register</button>
			</div>
		</div>
	</div>

</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}